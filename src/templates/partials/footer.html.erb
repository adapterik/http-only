<div class="footer">
  <!-- because, for some reason, bootstrap columns are not flexboxes -->
  <table width="100%" cellspacing="0" cellpadding="0">
    <tr>
      <td width="50%" class="footer-copyright">
        <small>Copyright Â© 2024 Adaptations</small>
      </td>
      <td width="50%" class="footer-links">
        <% if false %>
          <a href="/edit/<%= @context[:content]['id'] %>" >
            edit this <%= @context[:content]['content_type'] %>
          </a>
        <% end %>
        <a href="/page/contact">contact</a>
        <a href="/page/accessibility">accessibility</a>

        <% if @context[:is_secure] %>
          <% if @context[:session].nil? %>
            <a  href="http://<%= @context[:host] %><%= @context[:path] %>">
              non-secure site
            </a>
            <a href="/signin?return-path=<%= @context[:path] %>">
              sign in
            </a>
          <% else %>
            <form action="/authenticate" method="post" style="display: inline-block; margin-left: 16px;">
              <input type="hidden" name="_method" value="delete">
              <input type="hidden" name="return-path" value="<%= @context[:path] %>"> 
              <button type="submit">
                sign out <b><%= @context[:session]["user_id"] %></b>
              </button>
            </form>
          <% end %>
        <% else %>
          <a  href="https://<%= @context[:host] %><%= @context[:path] %>">
            secure site
          </a>
        <% end %>
      </td>
    </tr>
  </table>
</div>